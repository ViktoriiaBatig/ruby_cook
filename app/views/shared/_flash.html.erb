<script>
  $(document).ready(function () {
      toastr.options = {
        "closeButton": false,
        "debug": false,
        "newestOnTop": false,
        "progressBar": false,
        "positionClass": "toast-bottom-center",
        "preventDuplicates": false,
        "onclick": null,
        "showDuration": "300",
        "hideDuration": "1000",
        "timeOut": "5000",
        "extendedTimeOut": "1000",
        "showEasing": "swing",
        "hideEasing": "linear",
        "showMethod": "fadeIn",
        "hideMethod": "fadeOut"
      }
  });
</script>
<% if flash[:notice] %>
  <script>
    $(document).ready(function () {
      toastr.success("Success", "<%= j flash[:notice] %>");
    });
  </script>
<% elsif flash[:alert] || flash[:error] %>
  <script>
    $(document).ready(function () {
      toastr.error("Error", "<%= j flash[:alert] || flash[:error] %>");
    });
  </script>
<% end %>