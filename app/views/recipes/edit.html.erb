<h1>
    Редагування рецепту
</h1>


<%= form_for @recipe, :url => { :action => "update" } do |f| %>
    <p>
        <%= f.label :title %><br>
        <%= f.text_field :title %>
    </p>

    <p>
        <%= f.label :image %><br>
        <%= f.file_field :image %>
    </p>

    <p>
        <%= f.label :ingredients %><br>
        <%= f.text_area :ingredients, value: "" %>
    </p>

    <p>
        <%= f.label :description %><br>
        <%= f.text_area :description %>
    </p>

    <p>
        <%= f.label :category_id, 'Виберіть категорію' %><br>
        <%= f.select :category_id, options_for_select(@categories.map { |c| [c.title, c.id] }) %>
    </p>

    <p>
        <%= f.submit "Зберегти" %>
    </p>
<% end %>

