<%= content_for :title, "Реєстрація" %>

<div class="box-block">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, "E-mail" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true %>
  </div>

  <div class="field">
    <%= f.label :username, "Юзернейм (обов'язкове) латиницею" %><br />
    <%= f.text_field :username, required: true, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :password, "Пароль" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", required: true %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Підтвердженння паролю" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", required: true %>
  </div>

  <div class="actions">
    <%= f.submit "Зареєструватись", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>  