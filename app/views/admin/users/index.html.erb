 <h1>Користувачі</h1>

 <table class="table">
    <thead>
      <tr>
         <th>Username</th>
         <th>Електронна пошта</th>
         <th>Дата реєстрації</th>
         <th>Дії</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
         <tr>
            <td><%= user.username %></td>
            <td><%= user.email %></td>
            <td><%= user.created_at %></td>
            <td>
              <% if user.admin? %>
              <% else %>
              <%= link_to 'Видалити', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
              <% end %>
            </td>
         </tr>
      <% end %>
    </tbody>
 </table>